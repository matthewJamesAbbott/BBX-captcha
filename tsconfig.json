{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "skipLibCheck": true,
        "strict": false,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@types/*": [
                "src/types/*"
            ],
            "@blockly/*": [
                "src/Blockly/*"
            ],
            "@App/Lib/Blockly/*": [
                "src/Blockly/*"
            ],
            "App/Lib/Blockly/*": [
                "src/Blockly/*"
            ],
            // ðŸ”¹ NEW: for imports like "Assets/Icons/control.svg"
            "Assets/*": [
                "src/Assets/*"
            ]
        },
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "src"
    ]
}